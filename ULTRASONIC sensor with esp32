#include <Wire.h>
#include <LiquidCrystal_I2C.h>
long distance,duration;
LiquidCrystal_I2C lcd(0x27,16,2);



void setup() {
  // put your setup code here, to run once:
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0,0);
  lcd.print("Ultrasonic");
  pinMode(5, OUTPUT);//trigger
  pinMode(18, INPUT);//echo
}

void loop() {
  // put your main code here, to run repeatedly:
  digitalWrite(5, LOW);
  delay(2);
  digitalWrite(5, HIGH);
  delay(10);
  digitalWrite(5, LOW);

  duration = pulseIn(18,HIGH);// this speeds up the simulation
  distance = duration * 0.034 / 2;
  lcd.setCursor(0,1);
  lcd.print("Distance:  ");
  lcd.print(distance);
  lcd.print(" Cm");
  delay(500);
}
