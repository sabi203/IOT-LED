#include <DHT.h>
 DHT dht(21,DHT22);

 float Temperature;
 float Humidity;


void setup() {
  // put your setup code here, to run once:
 Serial.begin(115200);
 Serial.println("DHT 22 sensor reading the data ");
 dht.begin();
}

void loop() {
  Temperature = dht.readTemperature();
  Humidity = dht.readHumidity();
  if (isnan(Humidity) || isnan(Temperature))
  {
    Serial.println("Failed to read data");

    return;
  }
  Serial.print("Temperature:  ");
  Serial.print(Temperature);//23.6
  Serial.println(" C");

  Serial.print("Humidity:  ");
  Serial.print(Humidity);//23.6
  Serial.println(" %");

  delay(1000);
  
}
